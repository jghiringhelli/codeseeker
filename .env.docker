# CodeMind Docker Environment Configuration
# Updated with Layered Architecture Settings

# System Configuration
NODE_ENV=production
TZ=UTC
LOG_LEVEL=info

# Database Configuration - Foundation Layer
DB_NAME=codemind
DB_USER=codemind
DB_PASSWORD=codemind123
DB_HOST=codemind-db
DB_PORT=5432

# Redis Configuration
REDIS_HOST=codemind-redis
REDIS_PORT=6379

# Service Ports - Each Layer
API_PORT=3004                    # Layer 2: Core CLI
ORCHESTRATOR_PORT=3006           # Layer 3: Orchestrator  
DASHBOARD_PORT=3005              # Layer 4: Dashboard
PROXY_PORT=80                    # Layer 4: Nginx Proxy

# Claude Integration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_INTEGRATION=true

# Layer 2: Core CLI Configuration
ENABLE_INTELLIGENT_TOOL_SELECTION=true
ENABLE_PERFORMANCE_MONITORING=true
TOKEN_OPTIMIZATION=true
MAX_BATCH_SIZE=50
ENABLE_CACHING=true

# Layer 3: Orchestrator Configuration
MAX_PARALLEL_WORKFLOWS=3
MAX_PARALLEL_NODES=5
ENABLE_AI_ROLES=true
ENABLE_WORKFLOW_OPTIMIZATION=true
ENABLE_SELF_IMPROVEMENT=true

# Layer 4: Dashboard Configuration
ENABLE_REAL_TIME_MONITORING=true
ENABLE_CLAUDE_DECISION_TRACKING=true
WEBSOCKET_ENABLED=true
DASHBOARD_ORIGIN=http://localhost:3005

# Security Configuration
ENABLE_AUTH=true
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Performance Tuning
PERFORMANCE_MONITORING=true
METRICS_COLLECTION=true
HEALTH_CHECK_INTERVAL=30

# Development Overrides (commented out for production)
# NODE_ENV=development
# LOG_LEVEL=debug
# DB_PATH=:memory:

# Workspace Configuration
WORKSPACE_PATH=../workspace

# Optional Services Ports
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=admin123

# Service URLs (Internal Communication)
CLI_SERVICE_URL=http://codemind-api:3004
ORCHESTRATOR_SERVICE_URL=http://codemind-orchestrator:3006
DASHBOARD_SERVICE_URL=http://codemind-dashboard:3005