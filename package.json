{
  "name": "intelligent-code-auxiliary-system",
  "version": "0.1.0",
  "description": "Computational backend for coding LLMs that provides code analysis, pattern detection, and knowledge management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "mcp:dev": "tsx src/mcp/server.ts",
    "mcp:build": "tsc && node dist/mcp/server.js",
    "db:setup": "tsx scripts/db-setup.ts setup",
    "db:teardown": "tsx scripts/db-teardown.ts full",
    "db:clean": "tsx scripts/db-teardown.ts clean",
    "db:reset": "tsx scripts/db-teardown.ts reset",
    "db:verify": "tsx scripts/db-setup.ts verify",
    "setup:phase2-db": "tsx scripts/setup-phase2-db.ts",
    "self-improve": "tsx src/cli/codemind.ts self-improve",
    "dogfood": "tsx src/cli/codemind.ts dogfood",
    "analyze": "tsx src/cli/analyze.ts",
    "init": "tsx src/cli/init.ts",
    "codemind": "tsx src/cli/codemind.ts",
    "start": "npm run build && node dist/api/server.js",
    "start:dev": "npm run build && node dist/api/server.js --dev",
    "start:postgres": "DB_TYPE=postgresql npm run start:dev"
  },
  "keywords": [
    "code-analysis",
    "llm-assistant",
    "pattern-detection",
    "mcp-server",
    "claude-code",
    "typescript"
  ],
  "author": "CodeMind Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@babel/parser": "^7.23.4",
    "@babel/traverse": "^7.23.4",
    "@babel/types": "^7.23.4",
    "chokidar": "^4.0.3",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fast-glob": "^3.3.2",
    "ora": "^7.0.1",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.6",
    "tree-kill": "^1.2.2",
    "typescript": "^5.3.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.11",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "node-fetch": "^2.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/intelligent-code-auxiliary-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/intelligent-code-auxiliary-system/issues"
  },
  "homepage": "https://github.com/your-org/intelligent-code-auxiliary-system#readme"
}
